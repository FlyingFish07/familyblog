<tr id="pubfile-<%= pubfile.id %>" class="<%= cycle('', 'alt') %>">
  <td class='created_at'><%= format_create_date(pubfile.created_at) %></td>
  <td><%= link_to(pubfile.name, download_admin_pubfile_path(pubfile))%></td>
  <td><%= truncate(pubfile.description, :length => 40) %></td>
  <td>
    <%= link_to(image_tag('silk/pencil.png', :alt => 'edit'), admin_pubfile_path(pubfile)) %>
    <%= form_for(pubfile, :as => :pubfile, :url => admin_pubfile_path(pubfile), :html => {:class => 'delete-item', :method => :delete}) do |form| -%>
      <%= image_submit_tag("silk/delete.png", :alt => "Delete File") %>
    <% end -%>
  </td>
</tr>
